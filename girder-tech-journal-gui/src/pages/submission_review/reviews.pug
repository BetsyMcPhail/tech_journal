#headerBar
.Wrapper
  .Content
    .viewMain
      h3  Manage Reviews
      a(href=backURL) Back to Submission
      form(method="POST")
        b Submission Certification Level
        select#certificationLevel(name="certificationLevel")
          option(value="-1")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
        b OSEHRA VistA:
        select#submissionType(name="submissionType")
          option(value="")
          option(value="core") Core
          option(value="certified") Certified Component
        input#articleUpdate(type="Submit", value="Save")
      br
      div
        h6 Revision Name:
        select#revisionSelector
          for value,index in revisions
            option(value=index) #{value.name}
      hr
      #reviewDisplay(width="100%")
