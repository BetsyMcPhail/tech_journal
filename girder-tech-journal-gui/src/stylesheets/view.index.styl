.publication
  position relative
  padding-bottom 30px
  border-bottom  1px dotted #eeeeee


.publication_left
  padding-top  5px


.publication_rating
  position  relative
  top  10px


.publication_description
  position  absolute
  top  0
  left  80px
  width  620px


.publication_title


.publication_authors


.publication_authors, a
  font-weight  normal


.publication_abstract
  text-align  justify


.publication_footer
  margin-top  5px

/* hide un-used element of the ratings*/
div#ratingContainer h4, div#commentsContainer h4
  display none

div#ratingContainer, div#ratingsChart
  display none

div#ratingContainer div#ratingsAverage
  float none!important

div#ratingContainer, span.addRating
  float none!important
  display none!important

div#ratingContainer div#ratingsUsern, div#ratingContainer div.loginToRate
  float right!important
  position relative top -16px
  height  10px

div#ratingContainer, div.ratingsVSpacer
  float none!important
  display none!important


div.Panel
  border-left  1px dotted #eeeeee
  padding-left  5px


div.Panel, h4
  margin-bottom  0
  border-bottom  1px solid grey

.ResultLogo
  height 120px
  float left
  margin: 0 15px 20px 0

.ResultLogo.thumbnail
  max-width 64px
  max-height 64px
  height auto

.share-icon
  opacity  0.5!important
  // filter  alpha(Opacity=50)!important

table
  &#revisionTable,
  &#submissionTable
    box-shadow 0 3px 15px rgba(0,0,0,.15)
    margin-bottom 30px
    thead
      tr
        border none
    tr
      border-bottom 1px solid #d8d8d8
    th
      &:nth-of-type(even)
        background darken(primaryColor,6%)
    td
      &:nth-of-type(even)
        background darken(white,3%)

th, td
  padding 10px

th
  background primaryColor
  color white

td
  border none
  &.actions
    a
      background primaryColor
      border-radius 3px
      color white
      display inline-block
      font-size 11px
      padding 4px 7px 5px
      &:hover
        background lighten(primaryColor,10%)
      &:first-of-type
        margin-right 4px

tr.clickable-row
  cursor pointer

tr.selected
  font-weight bold
  td:first-of-type
    div
      position relative
      padding-left 5px
      &:before
        border-bottom 6px solid transparent
        border-left 8px solid primaryColor
        border-top 6px solid transparent
        content ''
        height 0
        left -13px
        position absolute
        top 1.5px
        width 0
