/* For the publication page */

.linkToArchiveWrapper
  color #666666

#publication
  .thumbnail
    padding-top  10px
    /* width 300px*/
    margin auto

  .title,
  .title2
    color inherit
    margin-top 0
    padding-bottom 5px

    a
      font-weight normal

  .pubHeader
    border-bottom 1px solid #d6d6d6
    margin-bottom 10px
    &:after
      content ''
      display table
      clear both

  .title
    display inline-block

  .revision
    font-size 16px

  .identifier
    font-size 12px
    line-height 1.4em
    padding-top 5px
    display block

  .revision_notes
    background #f8f8f8
    border 1px solid #ededed
    padding 10px 15px
    margin-bottom 30px
    h4
      padding-bottom 5px
      border-color #e6e6e6


#publication, .journal
  padding-top  10px
  padding-bottom: 20px


#publication, .submittedby
  font-size 12px
  padding-top  10px


#publication, .abstract
  padding-top  10px
  padding-bottom  10px
  margin-bottom 15px


.reviews
  font-weight  bold
  border-top  1px solid
  background-color #DDDDDD


.review
  border-top  1px solid
  padding-bottom  20px

.reviewedit
  padding-bottom  20px


.review_header2
  background-color #EEEEEE


.review_header
  color  #666666
  background-color #EEEEEE


/* size of reviews paragrahp*/
.review, p
  margin  0.5em 0


