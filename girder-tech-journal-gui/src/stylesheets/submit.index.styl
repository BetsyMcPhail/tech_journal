/* Form */

div#info_title
  font-size 14px
  border-bottom 1px solid #BDBDBD
  width 400px

.info_title
  font-size 14px
  border-bottom 1px solid #BDBDBD
  width 400px

#copyrightWrapper
  label
    display inline
  input
    width 15px!important

.submission
  position relative
  padding-top 30px
  margin-bottom  10px

  .title
    position absolute
    bottom 0
    left 0
    right 1px
    font-weight  bold
    color  #000000
    border-bottom  1px solid #999999

  .caption
    position absolute
    bottom 0
    right 1px
    font-size  80%
    text-align  right
    color  #999999
    border-bottom  1px solid #999999

#submission textarea
  width 895px
  textarea
    background-color  #FFFBF0
    border  1px solid #c0c0c0

p#submission
  padding-bottom 25px

textarea.smallInput
  width 100%
  height 16px

textarea.bigInput
  width 100%
  height 45px


.subcaption
  font-size  80%
  text-align  left

div#newResourceForm
  border 1px solid grey
  width  697px

detailsBG = #fffff8

#issueDetails
  & > div
    background detailsBG
    border 1px solid darken(desaturate(detailsBG,15%),20%)
    margin-top 20px
    padding 25px
    h3
      margin-top 0
    pre
      background darken(desaturate(detailsBG,20%),3%)
      border 1px solid darken(desaturate(detailsBG,20%),15%)
      color darken(desaturate(detailsBG,20%),30%)
    input[type=button]
      background #cc3d3d
      border none
      border-radius 3px
      color white
      display block
      float right
      padding 3px 6px 4px
      &:hover
        background lighten(#cc3d3d,10%)
    &:after
      content ''
      display table
      clear both
